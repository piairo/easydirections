<!-- CAROUSEL -->


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false" data-touch="true" data-wrap="false">

  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <% qty = 0 %>
          <%(@steps.length - 1).times do%>
          <% qty += 1 %>
    <li data-target="#carouselExampleIndicators" data-slide-to="<%="#{qty}"%>"></li>
          <% end %>
  </ol>

  <div class="carousel-inner">

     <div class="main-content carousel-item active" style="background-image: url('<%= cl_image_path @step.photo, :dpr => "auto", :responsive => true, :width => "auto", :quality=> "auto", :fetch_format=> "auto" %>')" alt="first slide">


          <div class="carousel-caption d-md-block ">
          <header><h1 class="text-white"> <%= @step.description %> </h1></header>
          </div>

    </div>

     <% @steps[1..-2].each do |step| %>
     <div class="main-content carousel-item" style="background-image: url('<%= cl_image_path step.photo, :dpr => "auto", :responsive => true, :width => "auto", :quality=> "auto", :fetch_format=> "auto" %>')" alt="first slide">

      <div class="carousel-caption d-md-block">
            <header><h1 class="text-white"> <%= step.description %> </h1></header>
      </div>
    </div>
    <% end %>


      <div class="main-content carousel-item" style="background-image: url('<%= cl_image_path @steps.last.photo, :dpr => "auto", :responsive => true, :width => "auto", :quality=> "auto", :fetch_format=> "auto" %>')" alt="first slide">

        <div class="carousel-caption d-md-block">
            <header> <h1> <%= @steps.last.description %> </h1> </header>
            <%= link_to "CLOSE", root_path, class: 'btn btn-success mybutton-lg home text-white mt-5', id: 'blinkbutton' %>
        </div>
      </div>


  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


