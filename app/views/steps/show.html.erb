

<!-- TITLE -->
    <header class="dashboard">
      <h2 class="d-flex justify-content-center" style="color: grey;">
        <%= @step.id%> /7
      </h2>

      <h2 id="typed" class="d-flex justify-content-center" data-strings="<%= ([] << @step.description).to_json  %>" data-speed="70" data-loop="false" style="color: #e91e63;"></h2>
    </header>

<div class="container">
    <div class="row justify-content-center align-items-end">
      <div class="col-8">
    <%= image_tag "chocolate_step#{@step.id}.png", style:'border-radius: 15px'%>
      </div>
    </div>
<!--   BUTTONS BACK & NEXT -->
    <div class="row justify-content-center">
      <div class="col-10 d-flex justify-content-between">
         <% if @step.id <= 1 %>
            <%= link_to "back", root_path, class: 'btn btn-secondary btn-lg' %>
          <% else %>
          <%= link_to "back", step_path(@step.id - 1), class: 'btn btn-secondary btn-lg' %>
          <% end %>
            <%= link_to 'next', step_path(@step.id + 1), class: 'btn btn-danger btn-lg' %>
        </div>
    </div>
</div>
