
<div class="container ml-3 mt-3 pb-2 border-bottom">

    <div class="container d-flex align-items-center pl-0">
        <h6><%=link_to raw("#{@instruction.name} <span class=\"text-muted\" style=\"font-size:1rem\">(#{@steps.count} steps)</span>"), edit_instruction_path(@instruction), class: 'text-dark'%></h6>
        <h6 class='ml-1 text-success'>  <%= @instruction.private ? "- private" : "- public" %> </h6>
    </div>

    <h7 class="text-muted"><%= @instruction.address %></h7>

    <div class="container d-flex justify-content-between pl-0 mt-1">
    <h7><%= link_to raw("<i class=\"fas fa-edit\"></i><span class=\"badge badge-pill badge-light\">edit infos</span>"), edit_instruction_path(@instruction), class: "text-secondary" %></h7>

     <h7 id="trigger"><%= link_to raw("<i class=\"fas fa-sort\"></i><span class=\"badge badge-pill badge-light\">re-order  <i class=\"far fa-hand-paper\"></i></span>"), target: "_blank", class: "text-primary" %></h7>

      <h7><%= link_to raw("<i class=\"fas fa-play-circle\"></i><span class=\"badge badge-pill badge-light\">play</span>"), instruction_step_path(@instruction, 1), class: "text-success" %></h7>

  </div>

</div>


