<div class="container ml-3 mt-4" style="width: 60%">

<ul id="items" style="list-style-type:none; margin:0px; padding:0px"  data-url="<%=instruction_steps_path(@instruction)%>">
    <%@steps.each do |step| %>
      <li data-id="<%= dom_id(step) %>">
      <%= link_to "#{step.position}", edit_instruction_step_path(step.instruction_id, step.position), class: 'badge badge-pill badge-primary mb-2', style: 'font-size: 1rem' %>
      <%= link_to "#{step.description}", edit_instruction_step_path(step.instruction_id, step.position), class: 'text-muted mr-2'%>
    <br>
       <%= link_to raw("<i class=\"fas fa-edit\"></i><span class=\"badge badge-pill badge-light\">edit</span>"), edit_instruction_step_path(step.instruction_id, step.position), class: "text-primary" %>

         <%= link_to raw("<i class=\"fas fa-trash\"></i><span class=\"badge badge-pill badge-light\">delete</span>"), instruction_step_path(step.instruction_id, step.position), data: { confirm: "Are you sure you want to delete?" }, method: :delete, class: "text-danger"%>
    <br>
<!--       <%= link_to edit_instruction_step_path(@instruction, step.position) do %>
      <%= cl_image_tag step.photo, height:120, width: 120, crop: :fill, class: 'mt-2 mb-3'%>
      <% end %> -->
            <%= cl_image_tag step.photo, height:120, width: 120, crop: :fill, class: 'mt-2 mb-3'%>
    <br>
    </li>
    <% end %>
</ul>

  <div class="mb-5 mt-3 pb-5">
  <%= link_to "+ add a step",  new_instruction_step_path(@instruction), class: 'btn btn-primary' %>
  </div>

</div>



