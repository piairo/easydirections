<%= render 'shared/navbar_wagon' %>

<div class="banner">  <!-- HOME(s)FOR BOOKING Guest-->
          <h1 style="padding-top: 60px"><span><strong>instructions</strong></span></h1>
          <h3 id="typed" data-strings="<%= ["step by step"].to_json  %>" data-speed="150" data-loop="true" style="display: inline"></h3>
