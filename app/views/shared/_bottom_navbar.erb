
<div class="d-flex bg-light justify-content-between p-3 align-items-center bottom-navbar">

  <!--   BUTTON BACK  --->
         <% if @step.number <= 1 %>
            <%= link_to "back", root_path, class: 'btn btn-secondary btn-lg' %>
          <% else %>
          <%= link_to "back", step_path(@step.number - 1), class: 'btn btn-secondary btn-lg' %>
          <% end %>

<!--   BUTTON INFO  --->

  <i class="fas fa-info-circle" data-toggle="modal" data-target="#exampleModalCenter"></i>

  <!--   BUTTON NEXT  --->
          <% if @step.number <= 7 %>
            <%= link_to "next", step_path(@step.number + 1), class: 'btn btn-secondary btn-lg' %>
          <% else %>
          <%= link_to "next", root_path, class: 'btn btn-secondary btn-lg' %>
          <% end %>
</div>

