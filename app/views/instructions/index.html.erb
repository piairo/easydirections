
  <% if user_signed_in? %>

    <div class="navbar navbar-light navbar-lewagon fixed-top p-2">
         <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo_easyinstructions4_small.png" %>
      <span><strong>My</strong> instructions</span>
      <% end %>
    </div>
    <br>
<div class="container pl-5 pr-5" style="background-color: aliceblue; padding-top: 54px;">
     <div class="recettes-cards">

        <% @user_instructions.each do |instruction| %>

          <div class="recette">

            <% if Step.where(instruction_id: instruction.id).last && Step.where(instruction_id: instruction.id).last.photo?  %>

               <%= link_to instruction_step_path(instruction.id, 1) do %>

                        <div class="recette-image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path Step.where(instruction_id: instruction.id).last.photo, :dpr => "auto", :responsive => true, :width => "auto", :quality=> "auto", :fetch_format=> "auto",:default_image => "logo_easyinstructions4_small.png" %>')">


                            <h3> <%= instruction.name.downcase %></h3>

                          <div class="privacy-buttons">
                            <% if instruction.private? %>
                            <h6 class='ml-1 text-success'> private 🔐</h6>
                            <% else %>
                            <h6 class='ml-1 text-danger'> public 👀</h6>
                            <% end %>
                          </div>
                        </div>
              <% end %>

            <% else %>


              <%= link_to instruction_step_path(instruction.id, 1) do %>

                                    <div class="recette-image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('../images/logo_easyinstructions4_large.png')">

                            <h3> <%= instruction.name.downcase %></h3>

                          <div class="privacy-buttons">
                            <% if instruction.private? %>
                            <h6 class='ml-1 text-success'> private 🔐</h6>
                            <% else %>
                            <h6 class='ml-1 text-danger'> public 👀</h6>
                            <% end %>
                          </div>
                        </div>

              <% end %>

            <% end %>
              <div class="recette-buttons">

                <a class="text-secondary"><%= "👣 #{instruction.steps.count} steps" %></a>

                  <%= link_to raw("<i class=\"fas fa-edit\"></i><span class=\"badge badge-pill badge-light\">edit </span>"), instruction_steps_path(instruction.id), class: "text-primary" %>


                  <%= link_to raw("<i class=\"fas fa-trash\"></i><span class=\"badge badge-pill badge-light\">delete</span>"), instruction_path(instruction.id), data: { confirm: "Are you sure you want to delete all your project?" }, method: :delete, class: "text-danger" %>
              </div>

            </div>

          <% end %>
    </div>
