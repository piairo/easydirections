<!-- app/views/flat/_form.html.erb -->

<div class="container pt-3">
  <h4>my project</h4>
  <br>
  <%= simple_form_for(@flat) do |f| %>
  <% if @flat.errors.any? %>
    <div class="errors-container" style="color: #e91e63">
      <ul>
        <% @flat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


      <%= f.label :'project name' %>
      <%= f.text_field :name, class: 'form-control', placeholder:'...', style:"border-color: #FF3760" %>
      <%= f.label :'project adress (optional)', class: "text-secondary mt-5" %>
      <%= f.text_field :address, class: 'form-control'%>


    <div class="mt-3">
    <%= link_to 'Back', 'javascript:history.back()', class: 'btn mybutton-light'%>
    <%= f.button :submit, class: 'btn btn-danger' %>
    </div>

 <% end %>
</div>


