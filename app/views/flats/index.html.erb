<div class="container mt-3">
  <% if user_signed_in? %>

    <h4>My projects</h4>
    <br>
    <% @user_flats.each do |flat| %>

      <h3> <%= link_to "#{flat.name}", flat_path(flat.id), class: 'btn btn-primary' %></h3>

      <p><%= flat.address %></p>

      <p>
     <%= link_to "#{flat.arrivals.count}", flat_arrivals_path(flat.id)%>
     <%= link_to "steps", flat_arrivals_path(flat.id), class: 'text-dark'%>
    <%= link_to raw("<i class=\"fas fa-play-circle\"></i><span class=\"badge badge-pill badge-light\">play</span>"), flat_arrival_path(flat.id, 1), class: "text-success" %>
     </p>
    <% end %>

  <% else %>
  <h4>Projects</h4>
    <br>
    <% @all_flats.each do |flat| %>

      <h3> <%= link_to "#{flat.name}", homes_for_booking_path(flat.name), class: 'btn btn-primary' %>
      <%= link_to raw("<i class=\"fas fa-play-circle\"></i><span class=\"badge badge-pill badge-light\">play</span>"),  homes_for_booking_path(flat.name), class: "text-success", style: "font-size: 2.5vmax" %>
      </h3>


      <p><%= flat.address %></p>

      <p>
     <%= link_to "#{flat.arrivals.count}", "#"%>
     <%= link_to "steps", "#", class: 'text-dark'%>

     </p>
    <% end %>

  <% end %>
<br>

      <div class="mt-3">
        <%= link_to 'Back', 'javascript:history.back()', class: 'btn mybutton-light'%>
        <%= link_to "+ add new project",  new_flat_path(@flat), class: 'btn btn-danger' %>
      </div>
</div>
