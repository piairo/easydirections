    <p>@flat.id : <%= @flat.id %></p>
    <p>current_user.id : <%= current_user.id %></p> -->
<!-- // -->

  <%= form_for [@flat, @arrival] do |f| %>

    <div class="form-group">

    <div class="form-group">
      <%= f.label :'Step number' %>
      <%= f.text_field :number, class: 'form-control', type:"number", min:"0", value: "#{@flat.arrivals.count + 1}" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>

    <%= link_to "back", flat_arrivals_path(@flat), class: 'btn mybutton-light'%>
    <%= f.submit class: 'btn btn-danger' %>
  <% end %>

  <% end %>
</div>
