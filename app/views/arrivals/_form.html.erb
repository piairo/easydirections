<!-- app/views/arrivals/_form.html.erb -->

<div class="container pt-3">
  <h4>my step</h4>
  <br>
  <%= simple_form_for [@flat, @arrival] do |f| %>
  <% if @arrival.errors.any? %>
    <div class="errors-container" style="color: #e91e63">
      <ul>
        <% @arrival.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<!-- DEBUG
    <p>@flat : <%= @flat %></p>
    <p>@flat.id : <%= @flat.id %></p>
    <br>
    <p>@arrival: <%= @arrival%></p>
    <p>@arrival.id: <%= @arrival.id%></p>
    <p>@arrival.number: <%= @arrival.number%></p>
    <br>
    <p>current_user.id : <%= current_user.id %></p> -->


      <%= f.label :'Step number' %>
        <% if @arrival.number.nil? %>
          <%= f.text_field :number,  min:"0", value: "#{@flat.arrivals.count + 1}", class: 'form-control' , style: 'font-size: 3rem; text-align: center'%>
        <% else %>
        <%= f.text_field :number, min:"0", class: 'form-control' %>
        <% end %>

      <%= f.label :'add description', class: 'mt-3' %>
      <%= f.input_field :description, class: 'form-control', placeholder:'...', style:"border-color: #FF3760" %>
      <br>

      <%= f.input :photo, label: :"Add photo", input_html: { class: 'text-danger' }%>
      <%= f.input :photo_cache, as: :hidden %>

    <div class="navbar_bottom fixed-bottom">

        <!--   BUTTON BACK  --->
        <%= link_to 'Back', 'javascript:history.back()', class: 'btn mybutton-light'%>

        <%# RESPONSIVE MENU BUTTON%>
        <div style="text-align: center">
          <button class="btn navbar-toggler p-0" data-toggle="canvas" data-target="#bs-canvas-right" aria-expanded="false" aria-controls="bs-canvas-right" style="color: white"><h1 class="fas fa-bars m-0" style="font-size: 2rem"></h1></button>
        </div>

        <!--   BUTTON SUBMIT  --->
        <%= f.button :submit, class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>
