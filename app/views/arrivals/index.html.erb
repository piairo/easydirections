<div class="container pt-3">
<h4><%= "#{@flat.name} (#{@flat.arrivals.count})"%>
<%= link_to raw("<i class=\"fas fa-play-circle\"></i><span class=\"badge badge-pill badge-light\">play</span>"), flat_arrival_path(@flat.id, 1), class: "text-success" %>
</h4>

<br>

<%@arrivals.each do |arrival| %>
  <p>
  <%= link_to "#{arrival.number}", edit_flat_arrival_path(arrival.flat_id, arrival.number), class: 'badge badge-pill badge-primary' %>
  <%= link_to "#{arrival.description}", edit_flat_arrival_path(arrival.flat_id, arrival.number), class: 'text-dark'%>

   <%= link_to "edit", edit_flat_arrival_path(arrival.flat_id, arrival.number), class: 'text-primary'%>
  <%= link_to "delete", flat_arrival_path(arrival.flat_id, arrival.number), data: { confirm: "Are you sure you want to delete?" }, method: :delete, class: 'text-secondary'%>
  </p>

  <%= link_to edit_flat_arrival_path(@flat, arrival.number) do %>
  <%= cl_image_tag arrival.photo, height:200, width: 200, crop: :fill, class: 'mb-3'%>
  <% end %>
<% end %>

<div class="mt-3">
  <%= link_to "back", flat_path(@flat), class: 'btn mybutton-light'%>
  <%= link_to "+ add a step",  new_flat_arrival_path(@flat), class: 'btn btn-danger' %>
</div>

</div>

